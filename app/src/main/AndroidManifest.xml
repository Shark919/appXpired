<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.winterapps.appxpired" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <application
        android:name=".memberVariables"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".menuActivity" ></activity>
        <activity android:name=".CRUD.AddFiles.addActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity android:name=".CRUD.ShowFiles.showActivity"></activity>
        <activity android:name=".BarcodeScanner.scanActivity"></activity>
        <activity android:name=".BarcodeScanner.uploadItem"></activity>
        <activity android:name=".Settings.settingsActivity"></activity>
        <activity android:name=".Settings.templateActivity"></activity>
        <activity android:name=".Settings.categoryActivity"></activity>
        <activity android:name=".Settings.positionActivity"></activity>
        <activity android:name=".CRUD.Login.loginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CRUD.Login.registerActivity"></activity>
        <activity android:name=".CRUD.ShowFiles.detailsActivity"></activity>
    </application>

</manifest>
