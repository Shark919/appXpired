<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addRelativeLayout">
            <com.wang.avi.AVLoadingIndicatorView
                android:id="@+id/avloadingIndicatorView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:indicator="LineSpinFadeLoader"
                app:indicator_color="#d2d2d2"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="false" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tableLayout"
                android:weightSum="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Name"
                        android:id="@+id/textView"
                        android:layout_column="0"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/templateEditName"
                        android:layout_column="1"
                        android:layout_weight="0.75"
                        android:layout_gravity="left|center_vertical" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Expire duration in days"
                        android:id="@+id/textView2"
                        android:layout_column="0"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.3" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:id="@+id/templateExpireDuration"
                        android:layout_weight="0.75"
                        android:layout_gravity="left|center_vertical" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Category"
                        android:id="@+id/textView17"
                        android:layout_column="0"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_vertical"
                        android:singleLine="true" />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/templateCategorySpinner"
                        android:layout_column="1"
                        android:spinnerMode="dropdown"
                        android:scrollIndicators="end"
                        android:layout_weight="0.7"
                        android:layout_gravity="left|center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Position"
                        android:id="@+id/textView3"
                        android:layout_column="0"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_vertical" />

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/templatePositionSpinner"
                        android:layout_column="1"
                        android:spinnerMode="dropdown"
                        android:scrollIndicators="end"
                        android:layout_weight="0.7"
                        android:layout_gravity="left|center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Amount"
                        android:id="@+id/textView4"
                        android:layout_column="0"
                        android:layout_weight="0.6"
                        android:layout_gravity="center_vertical" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.4"
                        android:weightSum="1">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/templateAmountEdit"
                            android:layout_gravity="left|center_vertical"
                            android:inputType="number"
                            android:layout_weight="0.6"
                            android:numeric="decimal" />

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/templateAmountSpinner"
                            android:gravity="right"
                            android:layout_weight="0.4"
                            android:spinnerMode="dropdown"
                            android:layout_gravity="left|center_vertical" />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Further description"
                        android:id="@+id/textView5"
                        android:layout_column="0"
                        android:layout_marginRight="10dp"
                        android:layout_weight="0.28"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/templateDescEdit"
                        android:layout_weight="0.75" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentTop="false"
                android:gravity="bottom"
                android:id="@+id/addButtonBar"
                android:baselineAligned="false"
                android:layout_alignWithParentIfMissing="false">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="110dp"
                    android:text="Add"
                    android:id="@+id/templateAddButton"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonshape"
                    android:textColor="#ffffff"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="15dp" />

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>